
<link rel="stylesheet" href="/css/user_profile.css">
    <h2 style="text-align:center;">Welcome to user home</h2>

  
    

    <section id="feed-post">
        <h4 style="text-align:left ">Post</h4>
            <% if(locals.user){ %>
                <form action="/posts/create" id="new-post-form" method="post">
                    <textarea name="content" id="" cols="30" rows="3" placeholder="Type Here" style="width: 300px"></textarea>
                    <input type="submit" value="Post" style="width: 100px;">
                 </form>
                <% } %>  
      

        <div class="post-list-container">
            <ul>
                <% for(post of posts) {%>
                    
                    <li>
                        <%= post.content %> 
                        <br>
                        <small>
                            <%= post.user.name %> 
                        </small>
                        <!-- comment form here -->
                        <% if(locals.user){ %> 
                            <form action="/comment/create" method="post">
                                <input type="text" name="content" id="" placeholder="Comment here">
                                <input type="hidden" name="post" id="" value="<%= post._id %> " >
                                <input type="submit" value="Add Comment">
                            </form>
                            <% } %> 
                    </li>

                    <%}%> 
            </ul>
        </div>
  
     </section>
     